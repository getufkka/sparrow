[apply]
  # choices are <nowarn|warn|fix|error|error-all>
  whitespace = error

[user]
  name =
  email =

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  a = add
  br = branch
  c = config --global -e
  cm = commit
  co = checkout
  cp = cherry-pick
  d = diff
  dc = diff --cached
  desc = describe
  # list all new commits after you fetched, with stats, but excluding merges
  lc = log ORIG_HEAD.. --stat --no-merges
  p = add -p
  ri = rebase -i
  s = status
  sh = show
  st = status
  # undo any change in the current branch (slightly dangerous...)
  undo = reset --hard
